#!bin/bash

lefthard=""
leftsoft=""
righthard=""
rightsoft=""

state=$(acpi -b | cut -d' ' -f 3 | cut -d, -f 1)
percentage=$(acpi -b | cut -d' ' -f 4)
percent=$(echo $percentage | cut -d% -f 1)
if [ $state = "Discharging" ]; then
	if [ $percent -ge 75 ]
	then
		echo -n "%{F$2}$righthard%{B$1 RF$7} BAT: $(/usr/share/i3blocks/battery | head -n 1 | sed "s/DIS //") %{F$3}$righthard%{R}%{F$1 B$3}"
	elif [ $percent -ge 50 ]
	then
		echo -n "%{F$2}$righthard%{B$6 R} BAT: $(/usr/share/i3blocks/battery | head -n 1 | sed "s/DIS //") %{F$3}$righthard%{R}%{F$1 B$3}"
	elif [ $percent -ge 25 ]
	then
		echo -n "%{F$2}$righthard%{B$5 R} BAT: $(/usr/share/i3blocks/battery | head -n 1 | sed "s/DIS //") %{F$3}$righthard%{R}%{F$1 B$3}"
	elif [ $percent -ge 10 ]
	then
		echo -n "%{F$2}$righthard%{B$4 R} BAT: $(/usr/share/i3blocks/battery | head -n 1 | sed "s/DIS //") %{F$3}$righthard%{R}%{F$1 B$3}"
	else
		echo -n "%{F$4}$righthard%{B$3 R} BAT: $(/usr/share/i3blocks/battery | head -n 1 | sed "s/DIS //") %{F$3}$righthard%{R}%{F$1 B$3}"
	fi
else
        echo -n "%{F$2}$righthard%{B$1 R} BAT: $(/usr/share/i3blocks/battery | head -n 1 | sed "s/CHR //" | sed "s/DIS //") %{F$3}$righthard%{R}%{F$1 B$3}"
fi

